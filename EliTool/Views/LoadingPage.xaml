<Page
    x:Class="EliTool.Views.LoadingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Transitions>
        <NavigationThemeTransition/>
    </Page.Transitions>
    <Grid x:Name="ContentArea">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="5">
			<ProgressRing IsActive="True" Width="70" Height="70"/>
			<TextBlock Style="{ThemeResource TitleTextBlockStyle}" HorizontalAlignment="Center" x:Uid="Setting_Loading_Title"/>
			<TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" x:Uid="Setting_Loading_Subtitle"/>
		</StackPanel>
    </Grid>
</Page>
